<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/add-product.css" />

    <%- include('../includes/navigation.ejs')%>

        <div class="main-container">
            <h1>Add Product</h1>
            <form action="/admin/<%if(editing){%>edit-product<%}else{%>add-product<%}%>" method="POST">
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <input type="text" id="productName" name="productName" required
                        value="<%if(editing){%><%=product.productName%><%}%>" />
                </div>
                <div class="form-group">
                    <label for="productPrice">Price</label>
                    <input type="numeric" id="productPrice" name="productPrice" step="0.01"
                        value="<%if(editing){%><%=product.productPrice%><%}%>" required />
                </div>
                <div class="form-group">
                    <label for="productImage">URL</label>
                    <input type="text" id="productImage" name="productImage"
                        value="<%if(editing){%><%=product.productImage%><%}%>" required />
                </div>
                <div class="form-group">
                    <label for="productDescription">Description</label>
                    <textarea id="productDescription" name="productDescription" rows="5" required><%if(editing){%><%=product.productDescription%><%}%>
                    </textarea>
                </div>
                <%if(editing){%>
                    <input type="hidden" name="productId" value="<%=product.uid%>">
                    <%}%>
                        <button type="submit">
                            <%if(editing){%>Edit Product<%}else{%>Add Product<%}%>
                        </button>
            </form>
        </div>
        <%- include('../includes/end.ejs')%>