<%- include('../includes/head.ejs')%>

    <link rel="stylesheet" href="/css/shop.css" />
    <%- include('../includes/navigation.ejs')%>


        <div class="container">
            <h2 class="container__title">Our Products</h2>
            <% if (prods.length> 0) { %>
                <div class="card-grid">
                    <% for (let product of prods){ %>
                        <div class="card">

                            <div class="image-container">
                                <img src="<%= product.productImage %>" alt="<%= product.productName %>">
                            </div>
                            <div class="card-content">
                                <h2 class="card-title">
                                    <%= product.productName %>
                                </h2>
                                <p class="card-price">$<%= product.productPrice%>
                                </p>
                                <p class="card-description">
                                    <%= product.productDescription%>
                                </p>
                                <div class="card-footer">
                                    <a href="/admin/edit-product/<%= product.uid%>?edit=true"
                                        class="card-button">Edit</a>
                                    <form action="/admin/delete-product" method="POST">
                                        <input type="hidden" value="<%= product.uid%>" name="productId">
                                        <button class="card-button" type="submit">Delete</button>
                                    </form>
                                </div>
                            </div>

                        </div>
                        <% } %>
                </div>
                <% }else {%>
                    <h3>No Products Found</h3>
                    <% } %>
        </div>

        <%- include('../includes/end.ejs')%>