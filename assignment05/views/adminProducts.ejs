<%- include("includes/header.ejs")%>
    <link rel="stylesheet" href="/css/shop.css">
    </head>

    <body>

        <%- include("includes/navbar.ejs")%>
            <div class="container mt-5">
                <div class="row">

                    <% if(products.length>0){%>
                        <div class="product-card">
                            <% for(product of products){%>
                                <div class="card mui-card">
                                    <div class="card-image">
                                        <img src="<%= product.image%>" alt="Product Image">
                                    </div>
                                    <div class="card-content">
                                        <span class="card-title">
                                            <!-- <%= product.name%> -->


                                            <% if (product.name.length> 20) { %>
                                                <%= product.name.substring(0, 20) + "..." %>
                                                    <% } else { %>
                                                        <%= product.name %>
                                                            <% } %>
                                        </span>
                                        <p>Price: <span class="card-price">$<%= product.price%></span>
                                        </p>

                                        <p class="card-description"><span class="description-title">Description:</span>
                                            <span class="short-description">
                                                <%= product.description.length> 42 ? product.description.substring(0,
                                                    42) + '...' : product.description %>
                                            </span>
                                            <a href="/products/<%= product.id %>" class="toggle-description"
                                                data-short="Show more" data-full="Show less">Show more</a>

                                        </p>
                                    </div>



                                    <div class="card-actions-button">
                                        <!-- <form action="/products/edit" method="POST">
                                            <input type="hidden" name="productId" value="<%= product.id %>">
                                            <button class="mui-btn mui-btn--primary" type="submit">Edit</button>
                                        </form>
                                        <form action="/products/delete" method="POST">
                                            <input type="hidden" name="productId" value="<%= product.id %>">
                                            <button class="mui-btn mui-btn--danger" type="submit">Delete</button>
                                        </form> -->
                                        <a href="/products/edit-product/<%= product.id%>"
                                            class="mui-btn mui-btn--primary">Edit</a>
                                        <a href="/products/delete-product/<%= product.id%>"
                                            class="mui-btn mui-btn--danger">Delete</a>
                                    </div>


                                </div>
                                <%}%>
                        </div>
                        <% }else{%>
                            <div class="container mt-5">
                                <h6 class="left-align">No products found.</h6>
                            </div>
                            <% }%>
                </div>
            </div>

            <%- include("includes/end.ejs")%>