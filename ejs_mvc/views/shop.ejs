<%- include('includes/head.ejs')%>

  <link rel="stylesheet" href="/css/shop.css" />
  <%- include('includes/navigation.ejs')%>

    <!-- Using <%= %> to escape HTML -->
    <p>
      <%= "This will be escaped: <script>alert('XSS')</script>" %>
    </p>

    <!-- Using <%- %> to render raw HTML -->
    <p><%- "This will not be escaped: <strong>Bold Text</strong>" %></p>
    <div class="main-container">
      <% if (prods.length> 0) { %>
        <h3>Our Products</h3>
        <div class="cards">
          <% for (let product of prods){ %>
            <div class="card">
              <img src="<%= product.productImage %>" alt="Product Image" />
              <div class="card-body">
                <div class="card-title">
                  <%= product.productName %>
                </div>
                <div class="card-description">
                  <%= product.productDescription%>
                </div>
                <div class="card-price">$<%= product.productPrice%>
                </div>
              </div>
            </div>
            <% } %>
        </div>
        <% } else {%>
          <h3>No Products Found</h3>
          <% } %>
    </div>
    <%- include('includes/end.ejs')%>